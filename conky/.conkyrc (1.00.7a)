conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 0,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_bufer = true,
    draw_borders = true,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Monospace:size=10',
    gap_x = 10,
    gap_y = 5,
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
 
    own_window_type = 'dock',
    own_window_argb_visual = true,
    own_window_argb_value = 30,

own_window_type = 'normal',
own_window_transparent = true,
own_window_argb_visual = true,
own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}
 
conky.text = [[
${color ffa500}${alignc}${font sans-serif:bold:size=10}SYSTEM${font}
${color lightgreen} Version(Conky/Takeo):${alignr} $color${conky_version} / 1.00.7a
${color lightgreen} Kernel:       $color ${sysname} ${kernel}
${color lightgreen} Uptime:       $color ${uptime}
${color lightgreen} DateTime:     $color ${time %Y年%m月%d日(%a) %H:%M:%S}
${color ffa500}${alignc}${font sans-serif:bold:size=10}CPU${font}
${color lightgreen} CPU Frequency: $color${freq_g}GHz / ${freq}MHz
${color lightgreen} Core1:$color${cpu cpu1}%${alignr}${color lightgreen} Temp: $color${hwmon 3 temp 2}℃ ${cpugraph cpu1 16,150 808080 ff5500}
${color lightgreen} Core2:$color${cpu cpu2}%${alignr}${color lightgreen} Temp: $color${hwmon 3 temp 4}℃ ${cpugraph cpu2 16,150 808080 ff8800}
${color ffa500}${alignc}${font sans-serif:bold:size=10}MEMORY${font}
${color lightgreen} RAM: ${color} $mem / $memmax  ${alignr}$memperc% ${color 6699ff}${membar 4,100}
${color lightgreen} Swap:$color$swap / $swapmax  ${alignr}$swapperc% ${color 669988}${swapbar 4,100}
${color ffa500}${alignc}${font sans-serif:bold:size=10}DISK${font}
${color lightgreen} /     ${color}${fs_used /} / ${fs_size /}${alignr}${fs_used_perc /}% ${color ff0000}${fs_bar 4,100 /}
${color lightgreen} /home ${color}${fs_used /home} / ${fs_size /home}${alignr}${fs_used_perc /home}% ${color aa0000}${fs_bar 4,100 /home}
${color lightgreen} Read:  $color${diskio_read /dev/sda}${alignr}${diskiograph_read 16,150 808080 ffff00}
${color lightgreen} Write: $color${diskio_write /dev/sda}${alignr}${diskiograph_write 16,150 808080 ff00ff}
${color ffa500}${alignc}${font sans-serif:bold:size=10}NETWORK${font}
${color lightgreen} Wi-FiAP: ${color}${wireless_essid wlp2s0}
${color lightgreen} Bitrate: ${color}${wireless_bitrate wlp2s0}${alignr}${wireless_link_qual_perc wlp2s0}% ${color 008800}${wireless_link_bar 4,100 wlp2s0}
${color lightgreen} Up:${color}${upspeed wlp2s0}${color lightgreen}${alignr}${color}${totalup wlp2s0} ${upspeedgraph wlp2s0 16,150 808080 00ff66}
${color lightgreen} Down:${color}${downspeed wlp2s0}${color lightgreen}${alignr}${color}${totaldown wlp2s0} ${downspeedgraph wlp2s0 16,150 808080 0000ff}
${color ffa500}${alignc}${font sans-serif:bold:size=10}PROCESSES${font}
${color lightgreen} Name             PID     CPU     MEM
${color ff00ff} ${top name 1} ${top pid 1} ${top cpu 1}% ${top mem 1}%
${color ff33ff} ${top name 2} ${top pid 2} ${top cpu 2}% ${top mem 2}%
${color ff66ff} ${top name 3} ${top pid 3} ${top cpu 3}% ${top mem 3}%
${color ff99ff} ${top name 4} ${top pid 4} ${top cpu 4}% ${top mem 4}%
${color ffbbff} ${top name 5} ${top pid 5} ${top cpu 5}% ${top mem 5}%
]]

